#======================= Global Settings =====================================
#{{ ansible_managed }}
[global]
 workgroup = {{ workgroup }}
 server string = Samba Asserts Server %v
 netbios name = assertsserver
 security = user
 server role = standalone server
 passdb backend = tdbsam
 obey pam restrictions = yes
 unix password sync = yes
 map to guest = never
 dns proxy = no
 restrict anonymous = 2
#============================ Share Definitions ==============================

#### Public Share ####
[{{ public_share_name }}]
 path = {{ public_share_path }}
 browsable = yes
 writable = yes
 guest ok = yes
 read only = no

#### Private Share ####
[{{ private_share_name }}]
 path = {{ private_share_path }}
 valid users = @{{ samba_group_name }}
 guest ok = no
 writable = yes
 browsable = yes
 create mask = 0700
 directory mask = 0700
