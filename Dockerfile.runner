FROM alpine:latest

    RUN apk update \
    && apk upgrade \
    && apk add python \
    py3-pip \
    python3-dev \
    gcc \
    libc-dev \
    libffi-dev \
    openssl-dev \
    make \
    jpeg-dev \
    curl \
    && rm -rf /var/cache/apk/*

ADD /tmp${CI_PROJECT_DIR}/${CI_COMMIT_SHA}/src/build/dist/*.zip /

RUN pip3 install --no-cache-dir -U /*.zip
RUN rm -f /*.zip
