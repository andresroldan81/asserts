FROM alpine:3.8

RUN apk update \
    && apk upgrade \
    && apk add py3-pip \
    python3-dev \
    libffi-dev \
    gcc \
    libc-dev \
    openssl-dev \
    make \
    jpeg-dev \
    curl \
    && rm -rf /var/cache/apk/*

COPY dist/*.zip /

RUN pip3 install -U pip && pip3 install --no-cache-dir -U /*.zip
RUN rm -f /*.zip
