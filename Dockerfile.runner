FROM alpine:3.8

COPY dist/*.zip /

RUN apk update \
    && apk upgrade \
    && apk add -u --no-cache py3-pip \
    python3-dev \
    libffi-dev \
    gcc \
    libc-dev \
    openssl-dev \
    make \
    jpeg-dev \
    curl && \
    rm -rf /var/cache/apk/* && \
    pip3 install -U pip && pip3 install --no-cache-dir -U /*.zip && \
    rm -f /*.zip
