FROM alpine:3.8

COPY dist/*.zip /

RUN apk update \
    && apk upgrade \
    && apk add -u --no-cache py3-pip \
    python3-dev \
    libffi-dev \
    gcc \
    libc-dev \
    openssl-dev \
    make \
    jpeg-dev \
    curl && \
    pip3 install -U pip && pip3 install --no-cache-dir -U /*.zip && \
    rm -f /*.zip && \
    apk del -r --purge python3-dev \
    libffi-dev \
    gcc \
    openssl-dev \
    make \
    libc-dev \
    musl-utils libc-utils \
    ssl_client \
    scanelf \
    libressl2.7-libtls \
    jpeg-dev && \
    apk add -u --no-cache libssl1.0 \
    libcrypto1.0 && \
    rm -rf /var/cache/apk/*
